<div class="movies-grid">
  <% @list.movies.each do |movie| %>
    <div class="box-poster">
      <%= image_tag movie.poster_url, class: 'movie-poster' %>
      <h3 class="movie-title"><%= movie.title %></h3>
      <%= link_to 'Back to lists', lists_path, class: 'back-link' %>
    </div>
  <% end %>
</div>

